<%= render 'shared/errors', obj: @account %>

	<%= form_for(@account, :html => {class: "form-horizontal", role: "form"}) do |f| %>
	<div class="form-group row">
		<div class="col-md-2 col-form-label ">
			<%= f.label :agency_id, "Agência" %>
		</div>
		<div class="col-md-10">
			<%= f.collection_select(:agency_id, Agency.all, :id, :address,  {prompt: "Selecione uma agência pelo endereço"}, { class: "custom-select form-control" }) %>
		</div>
	</div>
	<div class="form-group row">
		<div class="col-md-2 col-form-label ">
			<%= f.label :account_number, "Número da Conta" %>
		</div>
		<div class="col-md-10">
			<%= f.number_field :account_number, class: "form-control", placeholder: "Entre com o número da conta", autofocus: true %>
		</div>
	</div>
	<div class="form-group row">
		<div class="col-md-2 col-form-label">
			<%= f.label :balance, "Saldo" %>
		</div>
		<div class="col-md-10">
			<%= f.number_field :balance, class: "form-control", placeholder: "Entre com o saldo da conta" %>
		</div>
	</div>
	<div class="form-group row">
		<div class="col-md-2 col-form-label">
			<%= f.label :limit, "Limite" %>
		</div>
		<div class="col-md-10">
			<%= f.number_field :limit, class: "form-control", placeholder: "Entre com o limite da conta" %>
		</div>
	</div>
	<div class="form-group row">
		<div class="offset-2 col-md-10">
			<%= f.submit(@account.new_record? ? "Salvar" : "Atualizar", class: "btn btn-primary btn-lg btn-block") %>
		</div>
	</div>
	<% end %>
	<div class="offset-5 col-md-6 colormatch">
		[ <%= link_to "Cancelar e retornar pra lista de agências", accounts_path %> ]
	</div>