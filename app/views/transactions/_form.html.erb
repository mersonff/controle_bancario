<%= render 'shared/errors', obj: @transaction %>

	<%= form_for(@transaction, :html => {class: "form-horizontal", role: "form"}) do |f| %>
	<div class="form-group row">
		<div class="col-md-2 col-form-label ">
			<%= f.label :account_id, "Conta Bancária" %>
		</div>
		<div class="col-md-10">
			<%= f.collection_select(:account_id, Account.all, :id, :account_number,  {prompt: "Selecione uma conta bancária"}, { class: "custom-select form-control" }) %>
		</div>
	</div>
	<div class="form-group row">
		<div class="col-md-2 col-form-label">
			<%= f.label :value, "Valor" %>
		</div>
		<div class="col-md-10">
			<%= f.number_field :value, class: "form-control", placeholder: "Entre com o valor da transação" %>
		</div>
	</div>
	<div class="form-group row">
		<div class="col-md-2 col-form-label">
			<%= f.label :type_of_transaction, "Tipo de transação" %>
		</div>
		<div class="col-md-10">
			<select class="custom-select" name="transaction[type_of_transaction]" id="transaction_type_of_transaction">
			  <option selected>Open this select menu</option>
			  <option value="Depósito">Depósito</option>
			  <option value="Transferência">Transferência</option>
			  <option value="Saque">Saque</option>
			  <option value="Estorno">Estorno</option>
			</select>
		</div>
	</div>
	<div class="form-group row">
		<div class="offset-2 col-md-10">
			<%= f.submit(@transaction.new_record? ? "Salvar" : "Atualizar", class: "btn btn-primary btn-lg btn-block") %>
		</div>
	</div>
	<% end %>
	<div class="offset-5 col-md-6 colormatch">
		[ <%= link_to "Cancelar e retornar pra lista de agências", transactions_path %> ]
	</div>